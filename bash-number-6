#!/bin/bash
 
# -d file проверка, является ли файл директорией 
# -e file существует ли файл
# -f file существует ли файл и он ялвяется файлом 
# -r file доступен ли он для чтения
# -s file провяется, что файл не пустой
# -w file проверятеся, можно ли записывать в файл
# -x file проверяется, исполняемый ли файл
# file1 -nt file2 файл 1 новее, чем 2
# file1 -ot file 2 фай старше, чем 2
# -O file проверяется, что владельцем является текущий пользователь 
# -G file проверятеся, что файл существует и его идентификатор группы сооттветсвует идентификатору группы текущего пользователя 

mydir=/etc/configushka
if [ -d $mydir ]
then
echo "The $mydir directory exists"
cd $mydir
ls
else 
echo "The $mydir directory does not exist"
fi

